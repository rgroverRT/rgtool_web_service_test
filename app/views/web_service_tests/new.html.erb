  /*.b3 {background-color: #ffffdd;}*/
  .form1 {padding:20px;}
  .form1_label {font-weight:bold;}
</style>

<div id="my_page" style="margin-top:40px;background-color:#ffffff;">
    <div class="row">
        <div class="span12 b1">
            <h2>RESTful service tester</h2>
        </div>
    </div>
    <div class="row form1">
        <div class="span5 b2" style="">
            <%= form_for @web_service_test do |f| %>
            <div>
                <%= f.label :name, "give your test a better name!" %>
                <%= f.text_field :name %>
            </div>
            <br>
            <div>
                <%= f.label :server, "server (example: http://localhost:3000)", {class: "form1_label"} %>
                <%= f.text_field :server %>
            </div><div>
                <%= f.label :resource, "resource to test (example: 'subscriptions')" %>
                <%= f.text_field :resource%>
            </div><div>
                <%= f.label :test_method, "method to test" %>
                <%= f.collection_select(:test_method, @test_method_list, :to_s, :to_s) %>
            </div><div>
                <%= f.label :mime_type, "mime type" %>
                <%= f.collection_select(:mime_type, @mime_type_list, :to_s, :to_s) %>
            </div>
            <br>
            <%= f.submit "Run Test", class: "btn btn-primary" %>
            <% end %>
        </div>
        <div class="span5 b3" style="height:200px;">
            <label>response goes here ...</label>
        </div>
    </div>
</div>